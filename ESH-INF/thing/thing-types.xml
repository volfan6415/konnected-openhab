<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="konnected"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:thing="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0"
	xsi:schemaLocation="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0 http://eclipse.org/smarthome/schemas/thing-description-1.0.0.xsd">

	<!-- Sample Thing Type -->
	<thing-type id="module">
		<label>Konnected Binding Thing</label>
		<description>The Konnected Module</description>

		<channels>
			<channel id="zone1" typeId="zone" />
			<channel id="zone2" typeId="zone" />
			<channel id="zone3" typeId="zone" />
			<channel id="zone4" typeId="zone" />
			<channel id="zone5" typeId="zone" />
			<channel id="zone6" typeId="zone" />
		</channels>
 
		<config-description>
			<parameter name="Auth_Token" type="text" required="true">
				<label>Auth_Token</label>
				<description>This is the Authority Token used to communicate with the Konnected Module.</description>
			</parameter>
			<parameter name="Server Port" type="text" required="true">
                <label>Server_Port</label>
                <description>This is the port the plugin listens to events from the Connected Module on.</description>
            </parameter>
		</config-description>
		
		
	</thing-type>

	<!-- Zone Channel Type -->
	<channel-type id="zone">
		<item-type>konnectedItem</item-type>
		<label>Konnected Binding Channel</label>
		<description>Sample channel for Konnected Binding</description>
	   <state readOnly="true">
    <options>
        <option value="ON">Zone Triggered</option>
        <option value="OFF">Zone Dormant</option>
    </options>
</state>
	
	</channel-type>

</thing:thing-descriptions>
